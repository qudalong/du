.title{
  display: flex;
  font-size: 26rpx;
  padding: 10rpx;
  color: #fff;
  line-height: 1.8;
  font-size: 30rpx;

}
.list{
  padding: 20rpx;
 
}
.list:after{
  content: "";
        display: block;
        height: 0;
        clear:both;
        visibility: hidden;
}
.item{
  width: 49%;
  float: left;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}
.item:nth-child(2n){
  margin-left: 2%;
}
.item image{
  border-radius: 20rpx;
  width: 100%;
  height: 300rpx;
}
.titlea{
  display: flex;
  justify-content: space-between;
  color: #fff;
  padding-bottom: 20rpx;
}
.titlea .name{
  font-size: 28rpx;
}
.titlea .intro{
  font-size: 24rpx;
  color: #F1D012;
}
.row{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.a{
  font-size: 20rpx;
}
.price{
  color: #F1D012;
}
.row .btn{
  border-radius: 20rpx;
  background: #F1D012;
  color: #825364;
  font-size: 26rpx;
  padding: 20rpx;
}
page{
  background-image: linear-gradient(to right, #403EAA , #A20073);
}
.btns{
  border-radius: 100rpx;
  background: #fff;
  color: #F1D012;
  font-size: 46rpx;
  text-align: center;
  padding:40rpx 0;
  width: 70%;
  margin-left: 50%;
  transform: translateX(-50%);
  margin-bottom: 50rpx;
}